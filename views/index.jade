extends layout

block body
	div(ng-controller='AppCtrl')
		h2 Hello {{name}}
		if user != undefined
			p You are logged in as: #{ user.identifier } 
				a(href='/account/logout',target='_self') Logout
		else
			p Not logged in	
				a(href='/account/login',target='_self') Log In
		ul.menu
			li
				a(href='view1') view1
			li
				a(href='view2') view2

		div(ng-view)

		div
			| Angular seed app: v
		span(app-version)

	script(src='js/lib/angular/angular.js')
	script(src='js/app.js')
	script(src='js/services.js')
	script(src='js/controllers.js')
	script(src='js/filters.js')
	script(src='js/directives.js')
